<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <context-param>
        <param-name>contextConfigLocation</param-name>
        <param-value>/WEB-INF/applicationContext.xml</param-value>
    </context-param>
    <listener>
        <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
    </listener>
    <servlet>
        <servlet-name>dispatcher</servlet-name>
        <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
        <load-on-startup>2</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>CartServlet</servlet-name>
        <servlet-class>com.user.servlet.CartServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RemoveProduct</servlet-name>
        <servlet-class>com.user.servlet.RemoveProduct</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>OrderServlet</servlet-name>
        <servlet-class>com.user.servlet.OrderServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>StatueAdd</servlet-name>
        <servlet-class>com.admin.servlet.StatueAdd</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EditStatue</servlet-name>
        <servlet-class>com.admin.servlet.EditStatue</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>StatueDelete</servlet-name>
        <servlet-class>com.admin.servlet.StatueDelete</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>StatueCartServlet</servlet-name>
        <servlet-class>com.user.servlet.StatueCartServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CartStatueServlet</servlet-name>
        <servlet-class>com.user.servlet.CartStatueServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UserDelete</servlet-name>
        <servlet-class>com.admin.servlet.UserDelete</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>OrderDelete</servlet-name>
        <servlet-class>com.admin.servlet.OrderDelete</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProductAdd</servlet-name>
        <servlet-class>com.admin.servlet.ProductAdd</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddProduct</servlet-name>
        <servlet-class>com.admin.servlet.AddProduct</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteProduct</servlet-name>
        <servlet-class>com.admin.servlet.DeleteProduct</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EditProduct</servlet-name>
        <servlet-class>com.admin.servlet.EditProduct</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProfileServlet</servlet-name>
        <servlet-class>com.user.servlet.ProfileServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProfileUpdate</servlet-name>
        <servlet-class>com.user.servlet.ProfileUpdate</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SearchProductServlet</servlet-name>
        <servlet-class>com.user.servlet.SearchProductServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EditOrder</servlet-name>
        <servlet-class>com.admin.servlet.EditOrder</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>dispatcher</servlet-name>
        <url-pattern>*.htm</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CartServlet</servlet-name>
        <url-pattern>/CartServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RemoveProduct</servlet-name>
        <url-pattern>/RemoveProduct</url-pattern>
    </servlet-mapping>
